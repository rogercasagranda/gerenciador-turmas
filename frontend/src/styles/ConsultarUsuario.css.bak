/* Container principal da tela de consulta */
.consulta-container {
  padding: 20px;
  background-color: white;
  border-radius: 12px;
  box-shadow: 0 0 15px rgba(0, 0, 0, 0.05);
}

/* Título centralizado e com cor institucional */
.consulta-container h2 {
  text-align: center;
  margin-bottom: 20px;
  color: #5e17eb;
}

/* Estilo para mensagens de erro */
.consulta-container .erro {
  color: red;
  text-align: center;
  font-size: 14px;
  margin-bottom: 12px;
}

/* Estilo da tabela */
.consulta-container table {
  width: 100%;
  border-collapse: collapse;
  font-size: 14px;
}

/* Cabeçalho da tabela com cor de fundo */
.consulta-container thead {
  background-color: #f0ebfa;
}

/* Células com bordas e padding */
.consulta-container th,
.consulta-container td {
  padding: 12px;
  border: 1px solid #ddd;
  text-align: left;
}

/* Alternância de linhas da tabela */
.consulta-container tbody tr:nth-child(even) {
  background-color: #f9f9f9;
}
